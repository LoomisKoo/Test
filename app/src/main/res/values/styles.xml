<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        // 改变右上角三个圆点的颜色
        <item name="android:textColorSecondary">@color/white</item>

        <!--<item name="android:windowAnimationStyle">@null</item>//设置跳转动画为null，即没有动画-->
        <item name="android:windowBackground">@android:color/transparent</item>//设置窗口背景为透明
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--设置menu的背景颜色-->
        <item name="android:colorBackground">@color/white</item>
        <!--设置文本颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置menu弹出样式-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowAnimationStyle">@null</item>//设置跳转动画为null，即没有动画
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="drawer_menu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--允许共享动画-->
    <style name="TransitionsTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>


    <!--************************************************************电影详情页面************************************************************-->
    <!--标题栏折叠-->
    <style name="CollapsingToolbarExpandedStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--标题栏伸展-->
    <style name="CollapsingToolbarCollapsedStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 设置Toolbar标题字体的颜色大小 -->
    <style name="movieDetailTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#ffffff</item><!--toolbar标题字体颜色-->
    </style>

    <!-- 设置Toolbar 子标题subtitle标题字体的大小 -->
    <style name="movieDetailSubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">11sp</item><!--子标题字体大小-->
        <item name="android:textColor">#ffffff</item><!--子标题字体颜色-->
    </style>
</resources>
